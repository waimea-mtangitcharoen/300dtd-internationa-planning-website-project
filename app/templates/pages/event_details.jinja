{% extends 'pages/base.jinja' %}


{% block title %}

    {{ event.name }} details

{% endblock %}


{% block content %}

  <h1>{{ event.name }}</h1>

  <article>
    <ul>
      <li>Date: {{ event.date }}</li>
      <li>Description: {{ event.description }}</li>   
    </ul>

    <h2>{{ event.question }}</h2>
    
    <ul>
      <li><a href="/vote/{{ event.id }}/1">○</a>{{ event.option_1 }}</li>
      <li><a href="/vote/{{ event.id }}/2">○</a>{{ event.option_2 }}</li> 
      <li><a href="/vote/{{ event.id }}/3">○</a>{{ event.option_3 }}</li>
      <li><a href="/vote/{{ event.id }}/4">○</a>{{ event.option_4 }}</li>
      <li><a href="/vote/{{ event.id }}/5">○</a>{{ event.option_5 }}</li>  
    </ul>
  </article>


    <a role="button" href="/">Back to groups</a>

{% endblock %}