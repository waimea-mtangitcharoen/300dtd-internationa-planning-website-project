{#=====================================================
  User Registration page
  - Form for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - New User

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Sign up</h2>
        </header>

        <form action="/add-user" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Your name"
                required
            >

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Sign up</button>

        </form>

    </article>

{% endblock %}

