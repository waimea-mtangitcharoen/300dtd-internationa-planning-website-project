{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block menu %}

    <label role="button" for="menu_toggle">&#9776;</label>
    <input id="menu_toggle" type="checkbox">

    <ul class="nav-panel">
    
      <li><label for="menu_toggle">&#10005;</label></li>
      <li><a href="/group/new" class="menu">Create</a></li>
      <li><a href="/group/join" class="menu">Join</a></li>

      {% if session.user_id %}
        <li><a href="/logout">Logout</a></li>

      {% else %}
      
      {% endif %}

    </ul>

{% endblock %}

{% block content %}

  <h1><strong>Welcome, {{ session.user_name }}</strong></h1>

  <article>
    <div class="group">
        <ul>
            {% for group in groups %}

                <li>
                    <a href="/group/{{ group.id }}" class="group-button"role="button">
                        <strong>{{ group.name }}</strong>

                        {% if session.user_id == group.owner %}

                          <a href="/delete/{{ group.id }}" class="delete" onclick="return confirm('Really delete?');">ðŸ—‘</a>

                        {% else %}

                        {% endif %}
                    </a>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>
    </div>
  </article>

{% endblock %}

